<%= form_with url: "/merchants/#{@bulk_discount.merchant_id}/bulk_discounts/#{@bulk_discount.id}", method: :patch, local: true do |form| %>
  <%= form.label :percentage %>
  <%= form.number_field :percentage, value: @bulk_discount.percentage %>

  <%= form.label :quantity_threshold %>
  <%= form.number_field :quantity_threshold, value: @bulk_discount.quantity_threshold %>

  <%= form.submit "Submit" %>
<% end %>

<% flash.each do |type, message| %>
  <p><%= message %></p>
<% end %>
